@{
}

<table>
    <tr>
        <th>Medicine: </th>
        <th>Supply available until: </th>
    </tr>
    @for(int i=0; i<ViewBag.usermeds.Count; i++) {
        <tr>
            <th>@ViewBag.usermeds[i] &nbsp;&nbsp;</th>
            <th>@ViewBag.userexpiries[i]</th>
        </tr>
    }
</table>

<br /><br />

<form>
    <div class='form-group'>
        <label for='sortpreference'>Sort by Expiration</label>
        <input name='sortpreference' type='radio' id='sortpreference' value="True" checked />
        <br />
        <label for='namesort'>Sort by Name</label>
        <input name='sortpreference' type='radio' id='namesort' value="False" />
    </div>

    <input type='submit' value='Submit changes to sort preference' />
</form>